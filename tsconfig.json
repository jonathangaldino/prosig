{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": [ "node_modules" ],
  "include": [
    "src/**/*.ts",
  ]
}
